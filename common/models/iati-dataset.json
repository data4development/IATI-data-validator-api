{
  "name": "iati-dataset",
  "description": "IATI dataset information",
  "base": "PersistedModel",
  "idInjection": true,
  "scopes": {
    "completesvrl": {
      "description": "Datasets of publishers with all relevant fields for SVRL processing",
      "where": {
        "name": {
          "exists": true
        },
        "url": {
          "exists": true
        },
        "md5": {
          "exists": true
        },
        "publisher": {
          "exists": true
        },
        "filename": {
          "exists": true
        },
        "downloaded": {
          "exists": true
        },
        "updated": {
          "exists": true
        },
        "svrl-updated": {
          "exists": true
        }
      },
      "fields": [
        "name",
        "url",
        "md5",
        "publisher",
        "filename",
        "downloaded",
        "updated",
        "svrl-updated"
      ]
    }
  },
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "name": {
      "type": "string",
      "description": "Name of the dataset, consisting of publisher and file name"
    },
    "url": {
      "type": "string",
      "description": "URL of the dataset (if available)"
    },
    "md5": {
      "type": "string",
      "required": true,
      "description": "MD5 hash of the dataset"
    },
    "publisher": {
      "type": "string",
      "description": "Publisher slug"
    },
    "filename": {
      "type": "string",
      "description": "File name of the dataset"
    },
    "downloaded": {
      "type": "date",
      "description": "Timestamp of first download"
    },
    "updated": {
      "type": "date",
      "description": "Timestamp of latest update of the dataset record"
    },
    "feedback-updated": {
      "type": "date",
      "description": "Timestamp of data quality feedback"
    },
    "svrl-updated": {
      "type": "date",
      "description": "Timestamp of SVRL report"
    },
    "json-updated": {
      "type": "date",
      "description": "Timestamp of JSON report"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
